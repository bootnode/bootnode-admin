#nodes.dash
  .node-cards
    margin-top: 1rem
    display: grid
    grid-gap: 1rem
    grid-template-columns: repeat(auto-fill,minmax(280px, 1fr))

    color: rgba(0, 0, 0, 0.54)

    .host
      margin: .5rem 0 0

  .node-card-content
    padding-bottom: 0

  .charts
    display: grid
    padding: 1rem 0

    grid-template-columns: 300px 300px 270px 270px 270px
    grid-template-rows: 150px 150px
    color: rgba(0,0,0,.87)

    .chartTitle
      margin-bottom: 1rem
      font-weight: bold
      text-transform: uppercase
      display: flex
      flex-direction: columns

      & > *
        margin-right: .5rem

    .chart
      place-self: stretch
      padding: 0 1rem
      grid-row-start: 1
      grid-row-end: span 2
      border-right: 1px solid rgba(0,0,0,0.27)

    .map
      grid-column-start: 1
      grid-column-end: span 2

  .node-status
    display:block
    width: 1rem
    height: 1rem
    border-radius: 1rem

    &.ready
      background-color: $lightgreen500

    &.pending
      background-color: $orange500

  .node-table
    color: rgba(0,0,0,.87)
    padding: 1rem 0

    table
      border-spacing: 0
      border-collapse: collapse

      .tbody
        display: table-row-group

    th
    td
      text-align: left
      padding: 0 1rem
      white-space: nowrap
      background-color: white

      // first column
      &:first-child
        text-align: center

        & > *
          margin: 0 auto

      &:not(:last-child)
        width: 1px
        border-right: 1px solid rgba(0,0,0,0.27)

      &:last-child
        width: 1px
        text-align: right

        button
          padding: 4px

      &.too-long
        max-width: 300px
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap

    th:last-child > *
      margin-right: 4px

.form-group:first-child
  margin-top: .5rem

.new-node-dialog
  min-width: 400px

.d3
  position: relative

.d3-content
  margin: 0 auto

.d3-map
  svg
    width: 100%
    height: 100%

.d3-graphviz
  .d3-content
    text-align: center

.d3-donut
  svg
    width: 100%
    height: 100%

  path.slice{
    stroke-width:2px
  }

  polyline{
    opacity: .3
    stroke: black
    stroke-width: 2px
    fill: none
  }

  .labelValue
  {
    font-size: 60%
    opacity: .5
  }

  .toolTip {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
    position: absolute
    display: none
    width: auto
    height: auto
    background: none repeat scroll 0 0 white
    border: 0 none
    border-radius: 8px 8px 8px 8px
    box-shadow: -3px 3px 15px #888888
    color: black
    font: 12px sans-serif
    padding: 5px
    text-align: center
    }

  text {
    font: 12px sans-serif
  }
